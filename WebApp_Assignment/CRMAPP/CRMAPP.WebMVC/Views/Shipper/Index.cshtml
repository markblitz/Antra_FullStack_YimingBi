@model IEnumerable<ShipperModel>
<h1 class="display-6">Shipper Table</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Shipper Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipper in Model)
        {
            <tr>
                <td>@shipper.Id</td>
                <td>@shipper.Name</td>
                <td>@shipper.Phone</td>
                <td>
                    <a asp-action="Edit" asp-controller="Shipper" asp-route-id="@shipper.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Shipper" asp-route-id="@shipper.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Shipper" class="btn btn-primary">Create new shipper</a>