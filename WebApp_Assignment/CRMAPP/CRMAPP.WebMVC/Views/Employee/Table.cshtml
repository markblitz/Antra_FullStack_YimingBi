@model IEnumerable<EmployeeResponseModel>
<h1 class="display-6">Employee Table</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title of Courtesy</th>
            <th>Title</th>
            <th>Hire Date</th>
            <th>City</th>
            <th>Phone</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.TitleOfCourtesy</td>
                <td>@employee.Title</td>
                <td>@employee.HireDate</td>
                <td>@employee.City</td>
                <td>@employee.Phone</td>
                <td>
                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create new employee</a>
<a asp-action="Card" asp-controller="Employee" class="btn btn-primary">View employees in card</a>