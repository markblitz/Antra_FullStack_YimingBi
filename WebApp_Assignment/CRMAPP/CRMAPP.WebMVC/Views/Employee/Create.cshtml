@model EmployeeRequestModel
<h1 class="display-6">Create new employee</h1>
<hr />

<div>Please enter information below:</div><br />
<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="row">
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="TitleOfCourtesy">Title of Courtesy</label>
                <input asp-for="TitleOfCourtesy" class="form-control"/>
                <span asp-validation-for="TitleOfCourtesy"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="mb-4">
                <label asp-for="Phone">Phone Number</label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="mb-4">
                <label asp-for="BirthDate">Birth Date</label>
                <input asp-for="BirthDate" class="form-control"/>
                <span asp-validation-for="BirthDate"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="mb-4">
                <label asp-for="HireDate">Hire Date</label>
                <input asp-for="HireDate" class="form-control"/>
                <span asp-validation-for="HireDate"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-4">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="mb-4">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control"/>
                <span asp-validation-for="City"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="mb-4">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control"/>
                <span asp-validation-for="Country"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="mb-4">
                <label asp-for="PostalCode">Postal Code</label>
                <input asp-for="PostalCode" class="form-control"/>
                <span asp-validation-for="PostalCode"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <div class="mb-4">
                <label asp-for="RegionId">Region Id</label>
                <input asp-for="RegionId" class="form-control"/>
                <span asp-validation-for="RegionId"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="mb-4">
                <label asp-for="ReportsTo">Reports To</label>
                <input asp-for="ReportsTo" class="form-control"/>
                <span asp-validation-for="ReportsTo"></span>
            </div>
        </div>
        <div class="col-8">
            <div class="mb-4">
                <label asp-for="PhotoPath">Photo Path</label>
                <input asp-for="PhotoPath" class="form-control"/>
                <span asp-validation-for="PhotoPath"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Create Employee" class="btn btn-primary"/>
        </div>
    </div>
</form>
