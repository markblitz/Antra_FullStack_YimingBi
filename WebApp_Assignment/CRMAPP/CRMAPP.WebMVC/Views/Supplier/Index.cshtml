@model IEnumerable<SupplierResponseModel>
<h1 class="display-6">Supplier Table</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Supplier Id</th>
            <th>Company Name</th>
            <th>City</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Id</td>
                <td>@supplier.CompanyName</td>
                <td>@supplier.City</td>
                <td>
                    <a asp-action="Edit" asp-controller="Supplier" asp-route-id="@supplier.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Supplier" asp-route-id="@supplier.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Supplier" class="btn btn-primary">Create new supllier</a>