@model IEnumerable<ProductResponseModel>
<h1 class="display-6">Product Table</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Name</th>
            <th>CategoryId</th>

            <th>Quantity per Unit</th>
            <th>Unit Price</th>

            <th>Units in Stock</th>
            <th>If Discontinued</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.CategoryId</td>
                
                
                <td>@product.QuantityPerUnit</td>
                <td>@product.UnitPrice</td>

                <td>@product.UnitsInStock</td>
                <td>@product.Discontinued</td>
                <td>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create new product</a>