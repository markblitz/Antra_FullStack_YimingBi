@model CategoryModel
<h1 class="display-6">Create new category</h1>
<hr />

<div>Please enter information below:</div><br />
<form asp-controller="Category" asp-action="Create" method="post">
    <div class="row">
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="mb-4">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Create Category" class="btn btn-primary"/>
        </div>
    </div>
</form>