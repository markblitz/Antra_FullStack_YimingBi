@model RegionModel
<h1 class="display-6">Create new region</h1>
<hr />

<div>Please enter information below:</div><br />
<form asp-controller="Region" asp-action="Create" method="post">
    <div class="row">
        <div class="col-3">
            <div class="mb-4">
                <label asp-for="Name">Region Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Create Region" class="btn btn-primary" />
        </div>
    </div>
</form>