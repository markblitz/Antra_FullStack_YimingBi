@model IEnumerable<RegionModel>
<h1 class="display-6">Region Table</h1>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Region Id</th>
            <th>Region Name</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Region" asp-route-id="@region.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Region" asp-route-id="@region.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Region" class="btn btn-primary">Create new region</a>